# Leveling System module environment example
MODULE_LEVELING_SYSTEM_ENABLED=true
# Base XP awarded per message
LEVELING_XP_PER_MESSAGE=10
# Message cooldown (seconds) per user
LEVELING_MESSAGE_COOLDOWN=60
# Voice XP amount per interval
LEVELING_VOICE_XP=5
# Voice XP interval in seconds
LEVELING_VOICE_INTERVAL=60
# Default formula expressed as JS expression using `level` variable
LEVELING_XP_FORMULA="level * 100 + 500"
# Storage choice: 'mongo' (uses core mongo) or 'memory' (ephemeral)
LEVELING_STORAGE=mongo
