# Reminders Module Environment Variables

# Enable/disable the module
MODULE_REMINDERS_ENABLED=true

# Scheduling and limits
# Maximum number of reminders per user (default: 50)
REMINDERS_MAX_PER_USER=50

# Maximum number of reminders per guild/server (default: 500)
REMINDERS_MAX_PER_GUILD=500

# Maximum allowed reminder length in characters (default: 200)
REMINDERS_MAX_LENGTH=200

# Default reminder timezone (if not set by user)
REMINDERS_DEFAULT_TIMEZONE=UTC

# Cron expression for reminder job interval (default: every minute)
REMINDERS_SCHEDULE_CRON=*/1 * * * *

# Feature flags
# Enable recurring reminders
REMINDERS_ENABLE_RECURRING=true

# Enable channel reminders
REMINDERS_ENABLE_CHANNEL=true

# Enable timezone support
REMINDERS_ENABLE_TIMEZONE=true

# Safety: maximum reminders processed per job run (default: 100)
REMINDERS_MAX_PROCESS_PER_RUN=100