# Temporary Voice Channels Module Environment Variables

# Enable/disable the module
MODULE_TEMP_VC_ENABLED=true

# Defaults (can be overridden per guild via MongoDB settings)
# Idle timeout (seconds) before an empty VC is deleted (0 = disabled)
TEMP_VC_DEFAULT_IDLE_TIMEOUT_SEC=600
# Grace period (seconds) before final deletion once idle threshold hit (pre-delete warning window)
TEMP_VC_DEFAULT_GRACE_PERIOD_SEC=60
# Whether to delete a temp VC immediately when the owner leaves (if empty). If false, use idle+grace.
TEMP_VC_DEFAULT_DELETE_AFTER_OWNER_LEAVES=false

# Naming and sharding
# Default naming format supports {username}, {counter}
TEMP_VC_DEFAULT_NAMING_PATTERN={username}'s Channel
# Max shard categories to create (A..). Each category can hold up to ~50 channels.
TEMP_VC_MAX_SHARDS=10
# Whether to auto-create shard categories when nearing limits
TEMP_VC_AUTO_SHARD_CATEGORIES=true

# Limits and cooldowns
# Max active temp VCs per guild (0 = unlimited)
TEMP_VC_MAX_ACTIVE_PER_GUILD=0
# Max active temp VCs per user (0 = unlimited)
TEMP_VC_MAX_ACTIVE_PER_USER=0
# Per-user creation cooldown in milliseconds
TEMP_VC_DEFAULT_COOLDOWN_MS=15000

# Scheduled deletion regardless of activity (hours) (0 or empty = disabled)
TEMP_VC_DEFAULT_SCHEDULED_DELETION_HOURS=0

# Logging and i18n
# Default event logging enabled
TEMP_VC_EVENT_LOGGING_DEFAULT=true
# Default language (must exist in core/i18n)
TEMP_VC_DEFAULT_LANGUAGE=en